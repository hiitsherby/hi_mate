<% include ../partials/header %>
<div class="row">
<h1 style="text-align: center">Create a new Mate</h1>
<div style="width:30%; margin:20px auto">
	<form action="/dashboard" method="POST">
		<div class="form-group">
			<label for="title">Title</label>
			<input class="form-control" type="text" name="title" placeholder="Enter Title">
		</div>
		<div class="form-group">
		    <label for="location">Location</label>
		    <input class="form-control" type="text" name="location" id="location" placeholder="Enter Location">
		</div>
		<div class="form-group">
			<label for="time">Time</label>
			<input class="form-control" type="text" name="time" placeholder="Enter Time">
		</div>
		<div class="form-group">
			<label for="requirement">Requirements</label>
			<input class="form-control" type="text" name="requirement" placeholder="Enter Requirements">
		</div>
		<div class="form-group">
			<label for="contact">Contact</label>
			<input class="form-control" type="text" name="contact" placeholder="Enter Contact">
		</div>
		<div class="form-group">
			<label for="description">Description</label>
			<textarea class="form-control" type="text" name="text" placeholder="Enter Description"></textarea>
		</div>
		<div class="form-group">
			<label for="hashtags">Hashtags</label>
			<input class="form-control" type="text" name="hashtags" placeholder="Enter Hashtags">
		</div>
	<button class="btn btn-lg btn-primary btn-block">Submit!</button>
	</form>
	<br>
	<a href="/dashboard">Go Back</a>
</div>
</div>

<% include ../partials/footer %>